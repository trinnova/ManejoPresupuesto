@model TipoCuenta;

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear Tipo de Cuenta</h1>

<h5>
    Se refiere a agrupar las cuentas.
    Ejemplo: Préstamos, tarjetas de crédito, etc...
</h5>

@*ALL: todos los errores*@
<div asp-validation-summary="All" class="text-danger"></div>

@* A que controlador apuntamos: asp-controller *@
<form asp-controller="TiposCuentas" asp-action="Crear">
    <div class="mb-3">
        @*asp-for: nos ayuda a que no nos limpie el input después de realizar una acción*@
        <label asp-for="Nombre" class="form-label" ></label>
        <input type="text" class="form-control" asp-for="Nombre"/>
    </div>

    <div class="mb-3">        
        <label asp-for="Email" class="form-label"></label>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="mb-3">
        <label asp-for="Edad" class="form-label"></label>
        <input class="form-control" asp-for="Edad" />
    </div>

    <div class="mb-3">
        <label asp-for="URL" class="form-label"></label>
        <input class="form-control" asp-for="URL" />
    </div>

    <div class="mb-3">
        <label asp-for="TarjetaCredito" class="form-label"></label>
        <input class="form-control" asp-for="TarjetaCredito" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>